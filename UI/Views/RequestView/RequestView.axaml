<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UI.Views.RequestView.RequestView">
        <Grid RowDefinitions="auto,*,*" Margin="5">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
                <TextBlock VerticalAlignment="Center">Topic: </TextBlock>
                <TextBox MinWidth="200"></TextBox>
                <TextBlock VerticalAlignment="Center">Type: </TextBlock>
                <TextBox MinWidth="200"></TextBox>
                <Button MinWidth="100" HorizontalAlignment="Left" BorderBrush="Aqua">
                    <Button.Content>
                        <TextBlock HorizontalAlignment="Center">Send</TextBlock>
                    </Button.Content>
                </Button>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0, 5">
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" Watermark="Request" HorizontalAlignment="Stretch" />
            </Grid>

            <Grid Grid.Row="2" Margin="0, 5">
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" Watermark="Response" HorizontalAlignment="Stretch" />
            </Grid>
        </Grid>
</UserControl>